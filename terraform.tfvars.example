# AWS Configuration
aws_region = "ap-south-1"
environment = "prod"
project_name = "eks-microservices"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["ap-south-1a", "ap-south-1b"]

# EKS Configuration
eks_cluster_version = "1.28"
cluster_endpoint_public_access = false

eks_node_groups = {
  node_group_1 = {
    instance_types = ["t3.medium"]
    capacity_type  = "ON_DEMAND"
    min_size       = 2
    max_size       = 10
    desired_size   = 2
    disk_size      = 20
  }
  node_group_2 = {
    instance_types = ["t3.medium"]
    capacity_type  = "ON_DEMAND"
    min_size       = 2
    max_size       = 10
    desired_size   = 2
    disk_size      = 20
  }
}

# ALB Configuration
alb_certificate_arn = "arn:aws:acm:ap-south-1:123456789012:certificate/xxxxx"
domain_name = "example.com"

# RDS Configuration
rds_engine_version = "15.4"
rds_instance_class = "db.t3.medium"
rds_database_name = "microservices"
rds_username = "admin"
rds_password = "ChangeMe123!" # Use AWS Secrets Manager in production

# CI/CD Configuration
github_repo = "https://github.com/your-org/your-repo"
github_branch = "main"
github_token = "ghp_xxxxxxxxxxxxx" # Use AWS Secrets Manager in production

ecr_repositories = [
  "api-gateway",
  "user-service",
  "order-service",
  "payment-service",
  "inventory-service",
  "notification-service"
]

# Tags
tags = {
  Team        = "Platform"
  CostCenter  = "Engineering"
  Owner       = "DevOps"
}

